{
    http_port 80
    https_port 4123
    default_bind 127.0.0.1
}
https://{{ vless.domain }} {
  root * /srv
  file_server browse
  log {
    output file /var/lib/caddy/access.log {
      roll_size 10mb
      roll_keep 5
    }
  }
}
http://{{ vless.domain }} {
  bind 0.0.0.0
  redir https://{host}{uri} permanent
}