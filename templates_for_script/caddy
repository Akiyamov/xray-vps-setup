  $CADDY_REVERSE
}
:4123 {
  tls internal {
    on_demand
  }
  redir https://$VLESS_DOMAIN{uri} permanent
}
:80 {
  bind 0.0.0.0
  redir https://$VLESS_DOMAIN{uri} permanent
}