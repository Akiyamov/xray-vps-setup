{
  https_port 4123
  default_bind 127.0.0.1
  servers {
    protocols h1 h2
    listener_wrappers {
      proxy_protocol {
        allow 127.0.0.1/32
      }
      tls
    }
  }
  auto_https disable_redirects
}
https://$VLESS_DOMAIN {
  root * /srv
  file_server browse
  log {
    output file /var/lib/caddy/access.log {
      roll_size 10mb
      roll_keep 5
  }
}
}
http://$VLESS_DOMAIN {
  bind 0.0.0.0
  redir https://{host}{uri} permanent
}