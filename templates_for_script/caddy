{
  https_port 4123
  default_bind 127.0.0.1
  servers {
    protocols h1 h2
    listener_wrappers {
      proxy_protocol {
        allow 127.0.0.1/32
      }
      tls
    }
  }
  auto_https disable_redirects
}
https://$VLESS_DOMAIN {
  $CADDY_REVERSE
   log {
    output file /var/lib/caddy/access.log {
      roll_size 10mb
      roll_keep 5
  }
}
}
http://$IP_CADDY {
  tls internal
  redir https://$VLESS_DOMAIN{uri} permanent
}
:80 {
  bind 0.0.0.0
  redir https://$VLESS_DOMAIN{uri} permanent
}